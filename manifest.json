{
	"name": "CensIR",
	"version": "1.0",
	"description": "Censors triggering content",
	"icons": { "128": "images/trigger_warning.png" },
	"permissions": [
		"activeTab",
		"declarativeContent"
	],
	"icons": {
	  "128": "images/trigger_warning.png"
	},
	"browser_action": {
		"default_icon": {
			"128": "images/trigger_warning.png"
		},
		"default_title": "CensIR: Manage an unpredictable internet"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["styles.css"],
			"js": ["ext/jquery-3.3.1.js", "content.js"],
          	"all_frames": true
		}
	],
	"manifest_version": 2
}