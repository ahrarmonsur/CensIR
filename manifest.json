{
	"name": "CensIR",
	"version": "1.0",
	"description": "Censors trigger images",
	"icons": { "128": "icon_128.png" },
	"permissions": [
		"activeTab",
		"declarativeContent"
	],
	"icons": {
	  "128": "images/trigger_warning_128.ico",
	},
	"browser_action": {
		"default_icon": {
			"128": "images/trigger_warning_128.ico",
		},
		"default_title": "CensIR: Manage your triggers",
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["styles.css"],
			"js": ["content.js"]
		},
	],
	"default_locale": "en",
	"manifest_version": 2,
}